{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "GameEngineGameState",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "name",
    "managerId",
    "managerName",
    "markdown",
    "launchpointUrl",
    "isActive",
    "players",
    "whenCreated",
    "startTime",
    "endTime",
    "expirationTime",
    "vms",
    "challenge"
  ],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "managerId": {
      "type": "string",
      "minLength": 1
    },
    "managerName": {
      "type": "string",
      "minLength": 1
    },
    "markdown": {
      "type": "string",
      "minLength": 1
    },
    "audience": {
      "type": [
        "null",
        "string"
      ]
    },
    "launchpointUrl": {
      "type": "string",
      "minLength": 1
    },
    "isActive": {
      "type": "boolean"
    },
    "players": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/GameEnginePlayer"
      }
    },
    "whenCreated": {
      "type": "string",
      "format": "date-time",
      "minLength": 1
    },
    "startTime": {
      "type": "string",
      "format": "date-time",
      "minLength": 1
    },
    "endTime": {
      "type": "string",
      "format": "date-time",
      "minLength": 1
    },
    "expirationTime": {
      "type": "string",
      "format": "date-time",
      "minLength": 1
    },
    "vms": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/GameEngineVmState"
      }
    },
    "challenge": {
      "$ref": "#/definitions/GameEngineChallengeView"
    }
  },
  "definitions": {
    "GameEnginePlayer": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "gamespaceId",
        "subjectId",
        "subjectName",
        "permission",
        "isManager"
      ],
      "properties": {
        "gamespaceId": {
          "type": "string",
          "minLength": 1
        },
        "subjectId": {
          "type": "string",
          "minLength": 1
        },
        "subjectName": {
          "type": "string",
          "minLength": 1
        },
        "permission": {
          "$ref": "#/definitions/GameEnginePlayerPermission"
        },
        "isManager": {
          "type": "boolean"
        }
      }
    },
    "GameEnginePlayerPermission": {
      "type": "string",
      "description": "",
      "x-enumNames": [
        "None",
        "Editor",
        "Manager"
      ],
      "enum": [
        "None",
        "Editor",
        "Manager"
      ]
    },
    "GameEngineVmState": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "name",
        "isolationId",
        "isRunning",
        "isVisible"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "isolationId": {
          "type": "string",
          "minLength": 1
        },
        "isRunning": {
          "type": "boolean"
        },
        "isVisible": {
          "type": "boolean"
        }
      }
    },
    "GameEngineChallengeView": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "maxPoints",
        "maxAttempts",
        "attempts",
        "score",
        "sectionCount",
        "sectionIndex",
        "sectionScore",
        "lastScoreTime",
        "questions"
      ],
      "properties": {
        "text": {
          "type": [
            "null",
            "string"
          ]
        },
        "maxPoints": {
          "type": "integer",
          "format": "int32"
        },
        "maxAttempts": {
          "type": "integer",
          "format": "int32"
        },
        "attempts": {
          "type": "integer",
          "format": "int32"
        },
        "score": {
          "type": "number",
          "format": "double"
        },
        "sectionCount": {
          "type": "integer",
          "format": "int32"
        },
        "sectionIndex": {
          "type": "integer",
          "format": "int32"
        },
        "sectionScore": {
          "type": "number",
          "format": "double"
        },
        "sectionText": {
          "type": [
            "null",
            "string"
          ]
        },
        "lastScoreTime": {
          "type": "string",
          "format": "date-time",
          "minLength": 1
        },
        "questions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/GameEngineQuestionView"
          }
        }
      }
    },
    "GameEngineQuestionView": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "answer",
        "isCorrect",
        "isGraded",
        "penalty",
        "text",
        "weight"
      ],
      "properties": {
        "answer": {
          "type": "string",
          "minLength": 1
        },
        "example": {
          "type": [
            "null",
            "string"
          ]
        },
        "hint": {
          "type": [
            "null",
            "string"
          ]
        },
        "isCorrect": {
          "type": "boolean"
        },
        "isGraded": {
          "type": "boolean"
        },
        "penalty": {
          "type": "number",
          "format": "float"
        },
        "text": {
          "type": "string",
          "minLength": 1
        },
        "weight": {
          "type": "number",
          "format": "float"
        }
      }
    }
  }
}
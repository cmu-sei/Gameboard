{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/Gameboard.Api/Gameboard.Api.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/Gameboard.Api/Gameboard.Api.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Tests: All",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "type": "shell",
            "command": "dotnet",
            "args": [
                "test"
            ]
        },
        {
            "label": "Tests: Unit",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "test",
                "${workspaceFolder}/src/Gameboard.Api.Tests.Unit"
            ],
            "problemMatcher": []
        },
        {
            "label": "Tests: Integration",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "test",
                "${workspaceFolder}/src/Gameboard.Api.Tests.Integration"
            ],
            "problemMatcher": []
        },
        {
            "label": "EF: Create Migration (PG)",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "ef",
                "migrations",
                "add",
                "${input:migrationName}",
                "--project",
                "${workspaceFolder}/src/Gameboard.Api",
                "--context",
                "GameboardDbContextPostgreSql"
            ],
            "problemMatcher": []
        },
        {
            "label": "EF: Undo Migration",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "ef",
                "migrations",
                "remove",
                "--project",
                "${workspaceFolder}/src/Gameboard.Api",
                "--context",
                "GameboardDbContextPostgreSql"
            ]
        },
        {
            "label": "EF: Update database",
            "dependsOn": [
                "build",
            ],
            "dependsOrder": "sequence",
            "problemMatcher": [],
            "command": "dotnet",
            "args": [
                "ef",
                "database",
                "update",
                "--project",
                "${workspaceFolder}/src/Gameboard.Api",
                "--context",
                "GameboardDbContextPostgreSql"
            ]
        },
        {
            "label": "EF: Update database to...",
            "dependsOrder": "sequence",
            "dependsOn": [
                "build"
            ],
            "problemMatcher": [],
            "command": "dotnet",
            "args": [
                "ef",
                "database",
                "update",
                "${input:updateDbMigrationName}",
                "--project",
                "${workspaceFolder}/src/Gameboard.Api",
                "--context",
                "GameboardDbContextPostgreSql"
            ]
        }
    ],
    "inputs": [
        {
            "id": "migrationName",
            "type": "promptString",
            "description": "Enter the name of your migration"
        },
        {
            "id": "updateDbMigrationName",
            "type": "promptString",
            "description": "Enter the name of the migration to which you want to update the DB. Leave blank to update to the most recent one.",
            "default": ""
        }
    ]
}
